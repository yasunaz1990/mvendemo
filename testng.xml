<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Alphaleaf moonshot test suit">

    <!--Test Execution Listeners -->
    <listeners>
        <listener class-name="utility.TestListener"/>
    </listeners>


    <!--     Test Contexts    -->
    <test name="smoke">
        <classes>
            <class name="testcases.TrelloAuthenticationTest"/>
            <class name="testcases.PaymentTest">
                <methods>
                    <include name="validate_card"/>
                    <exclude name="invalid_card"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="regression">
        <classes>
            <class name="testcases.TrelloAuthenticationTest"/>
            <class name="testcases.PaymentTest"/>
        </classes>
    </test>

    <test name="end2end">
        <packages>
            <package name="testcases"/>
        </packages>
        <classes>
            <class name="testcases.TrelloAuthenticationTest"/>
        </classes>
    </test>

</suite>


