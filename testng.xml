<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Alphaleaf moonshot test suit">

    <listeners>
        <listener class-name="utility.TestExecutionDetection"/>
    </listeners>


    <test name="smoke">
        <classes>
            <class name="tests.OptionsDemoTest"/>
        </classes>
    </test>


    <test name="RegVerification">
        <packages>
            <package name="tests"/>
        </packages>
    </test>


    <test name="IntyTest">
        <classes>
            <class name="tests.smoke.ModuleOneTest">
                <methods>
                    <include name="testCase3"/>
                    <include name="testCase4"/>
                </methods>
            </class>

            <class name="tests.regression.OptionDemoTwoTest">
                <methods>
                    <exclude name="test20"/>
                    <exclude name="test23"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="PRACTICE">
        <classes>
            <class name="tests.PracticeTest"/>
        </classes>
    </test>


    <test name="all">
        <packages>
            <package name="tests"/>
        </packages>
    </test>

</suite>